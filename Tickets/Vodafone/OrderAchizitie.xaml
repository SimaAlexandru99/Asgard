<Page x:Class="Asgard.Tickets.Vodafone.OrderAchizitie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:val="clr-namespace:Asgard.Validations"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="Comanda Achizitie" Loaded="Page_Loaded">
    <Page.DataContext>
        <val:Verifications/>
    </Page.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{DynamicResource BackgroundThirdColor}" Margin="2,2,0,0">
                <Grid Margin="35,0,35,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <MenuItem x:Name="HomeButton" Header="Acasă" Style="{StaticResource NavigationMenu}"  Width="40"/>
                        <iconPacks:PackIconFeatherIcons
                                    Foreground="{DynamicResource TextColor}"
                                    Width="7"
                                    Height="7"
                                    Kind="ChevronRight" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        <MenuItem x:Name="TicketeButton" Header="Tickete" Style="{StaticResource NavigationMenu}" Width="80"/>
                        <iconPacks:PackIconFeatherIcons
                                    Foreground="{DynamicResource TextColor}"
                                    Width="7"
                                    Height="7"
                                    Kind="ChevronRight" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        <TextBlock Text="Comandă Achiziție" FontFamily="/Fonts/#Rubik Semibold" Foreground="{DynamicResource VodafoneBackgroundColor}" FontSize="12" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            <StackPanel Grid.Row="2" Margin="35 0 35 0" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="Comandă Achiziție" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Bold" FontSize="25"/>
                <TextBlock Text="Crează o comandă nouă" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Semibold" FontSize="12" Margin="0,5,0,0"/>
            </StackPanel>
            <Grid Grid.Row="3" Margin="35 30 35 0">
                <Grid x:Name="step1Panel" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Date personale" Foreground="{DynamicResource TextColor}" Grid.Row="0" Grid.ColumnSpan="6" FontFamily="/Fonts/#Rubik Bold" VerticalAlignment="Center"/>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0">
                        <TextBlock Text="Nume și prenume client" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox
                            x:Name="nameClient"
                            Style="{StaticResource TextBoxCustom}" 
                            Validation.ErrorTemplate="{StaticResource errorTemplate}">
                            <TextBox.Text>
                            <Binding
                            Path="Name"
                            UpdateSourceTrigger="LostFocus"
                            ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <val:MinimumCharacterRule MinimumCharacters="3" />
                                    <val:NotEmptyRule/>
                                </Binding.ValidationRules>
                            </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="0">
                        <TextBlock Text="CNP" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox
                        x:Name="cnp"  
                            MaxLength="13"
                        Style="{StaticResource TextBoxCustom}"
                            Validation.ErrorTemplate="{StaticResource errorTemplate}">
                            <TextBox.Text>
                                <Binding
                            Path="CNP"
                            UpdateSourceTrigger="LostFocus"
                            ValidatesOnDataErrors="True">
                                    <Binding.ValidationRules>
                                        <val:MinimumCharacterRule MinimumCharacters="13" />
                                        <val:NotEmptyRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="5"
                        Grid.Column="0">    
                        <TextBlock Text="Tip client" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,10"/>
                        <ComboBox
                        x:Name="comboboxClient"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"      
                        SelectedValuePath="Content"
                        Cursor="Hand"
                        Height="50"
                        FontFamily="/Fonts/#Rubik Regular"
                        BorderThickness="0"
                        BorderBrush="{DynamicResource TextColor}"
                        Background="{DynamicResource InputColor}"
                        Foreground="{DynamicResource TextColor}"
                        IsReadOnly="True"
                        Validation.ErrorTemplate="{StaticResource errorTemplate}" SelectionChanged="ComboboxClient_SelectionChanged"
                        >
                            <ComboBoxItem Content="Client nou" />
                            <ComboBoxItem Content="Client existent" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="2">
                        <TextBlock x:Name="TextNumarFirstPage" Text="Număr existent (paperless)" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox
                        MaxLength="9"
                        x:Name="numar_existent"
                        Style="{StaticResource TextBoxCustom}"  Validation.ErrorTemplate="{StaticResource errorTemplate}">
                            <Binding
                            Path="NumarExistent"
                            UpdateSourceTrigger="LostFocus"
                            ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <val:MinimumCharacterRule MinimumCharacters="9" />
                                    <val:NotEmptyRule />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </StackPanel>

                    <StackPanel
                Grid.Row="3"
                Grid.Column="2">
                        <TextBlock Text="Județ" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,10"/>
                        <ComboBox
                        x:Name="comboboxJudet"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"      
                        SelectedValuePath="Content"
                        Cursor="Hand"
                        Height="50"
                        FontFamily="/Fonts/#Rubik Regular"
                        BorderThickness="0"
                        BorderBrush="{DynamicResource TextColor}"
                        Background="{DynamicResource InputColor}"
                        Foreground="{DynamicResource TextColor}"
                        IsReadOnly="True"
                        Validation.ErrorTemplate="{StaticResource errorTemplate}"
                        SelectionChanged="ComboboxJudet_SelectionChanged">

                        </ComboBox>
                    </StackPanel>


                    <StackPanel
                Grid.Row="5"
                Grid.Column="2">
                        <TextBlock Text="Oraș" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <ComboBox

                        x:Name="comboboxLocalitate"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"      
                        SelectedValuePath="Content"
                        Cursor="Hand"
                        Height="50"
                        FontFamily="/Fonts/#Rubik Regular"
                        BorderThickness="0"
                        IsEditable="True"
                        BorderBrush="{DynamicResource TextColor}"
                        Background="{DynamicResource InputColor}"
                        Foreground="{DynamicResource TextColor}"
                        Validation.ErrorTemplate="{StaticResource errorTemplate}">

                        </ComboBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="4">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=comboboxClient, Path=SelectedValue}" Value="Client nou">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Serie si Numar Buletin" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox
                        x:Name="serie"
                        Style="{StaticResource TextBoxCustom}"  Validation.ErrorTemplate="{StaticResource errorTemplate}">
                            <TextBox.Text>
                                <Binding
                            Path="Serie"
                            UpdateSourceTrigger="LostFocus"
                            ValidatesOnDataErrors="True">
                                    <Binding.ValidationRules>
                                        <val:NotEmptyRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="4">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=comboboxClient, Path=SelectedValue}" Value="Client nou">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Emis de:" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox
                        x:Name="emis" 
                        Style="{StaticResource TextBoxCustom}"  Validation.ErrorTemplate="{StaticResource errorTemplate}" TabIndex="5">
                            <TextBox.Text>
                                <Binding
                            Path="Emis"
                            UpdateSourceTrigger="LostFocus"
                            ValidatesOnDataErrors="True">
                                    <Binding.ValidationRules>
                                        <val:NotEmptyRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>



                    <StackPanel Grid.Row="7"
                        Margin="0 0 0 10"
                        Grid.Column="4" VerticalAlignment="Center">
                        <Button Content="Mai departe" Style="{StaticResource SendButton}" Click="NextButtonClick"/>
                    </StackPanel>
                    
                    
                </Grid>
                <Grid x:Name="step2Panel" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Detalii ofertă" Foreground="{DynamicResource TextColor}" Grid.Row="0" Grid.ColumnSpan="6" FontFamily="/Fonts/#Rubik Bold" VerticalAlignment="Center"/>

                    <StackPanel
                Grid.Row="1"
                Grid.Column="0">
                        <TextBlock Text="Numarul este folosit de un copil?" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,10"/>
                        <ComboBox
                        x:Name="comboboxKid"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"      
                        SelectedValuePath="Content"
                        Cursor="Hand"
                        Height="50"
                        FontFamily="/Fonts/#Rubik Regular"
                        BorderThickness="0"
                        BorderBrush="{DynamicResource TextColor}"
                        Background="{DynamicResource InputColor}"
                        Foreground="{DynamicResource TextColor}"
                        Validation.ErrorTemplate="{StaticResource errorTemplate}"
                        >
                            <ComboBoxItem Content="Da" />
                            <ComboBoxItem Content="Nu" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="0">
                        <TextBlock Text="Este client comun?" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <ComboBox
                        x:Name="client_comun_combo"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"      
                        SelectedValuePath="Content"
                        Cursor="Hand"
                        Height="50"
                        FontFamily="/Fonts/#Rubik Regular"
                        BorderThickness="0"
                        BorderBrush="{DynamicResource TextColor}"
                        Background="{DynamicResource InputColor}"
                        Foreground="{DynamicResource TextColor}"
                        Validation.ErrorTemplate="{StaticResource errorTemplate}">
                            <ComboBoxItem Content="Da" />
                            <ComboBoxItem Content="Nu" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel
                Grid.Row="5"
                Grid.Column="0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=client_comun_combo, Path=SelectedValue}" Value="Da">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="ID Client comun" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox
                        x:Name="id_client_comun"
                        Style="{StaticResource TextBoxCustom}"  Validation.ErrorTemplate="{StaticResource errorTemplate}"
                        Padding="10">
                        </TextBox>
                    </StackPanel>

                    <StackPanel
                Grid.Row="1"
                Grid.Column="2">
                        <TextBlock Text="Tip Abonament" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <ComboBox
                        x:Name="tipAbonament"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"      
                        SelectedValuePath="Content"
                        Cursor="Hand"
                        Height="50"
                        FontFamily="/Fonts/#Rubik Regular"
                        BorderThickness="0"
                        BorderBrush="{DynamicResource TextColor}"
                        Background="{DynamicResource InputColor}"
                        Foreground="{DynamicResource TextColor}"
                        Validation.ErrorTemplate="{StaticResource errorTemplate}"
                        SelectionChanged="TipAbonament_SelectionChanged"
>
                            <ComboBoxItem Content="Activare noua" />
                            <ComboBoxItem Content="Migrare" />
                            <ComboBoxItem Content="Portare PrePay Orange" />
                            <ComboBoxItem Content="Portare PrePay Telekom" />
                            <ComboBoxItem Content="Portare PrePay Digi" />
                            <ComboBoxItem Content="Portare Abonament Orange" />
                            <ComboBoxItem Content="Portare Abonament Telekom" />
                            <ComboBoxItem Content="Portare Abonament Digi" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="2">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=tipAbonament, Path=SelectedValue}" Value="Activare noua">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Număr impactat" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox x:Name="numar_impactat"   
                        PreviewTextInput="Text_PreviewTextInput"
                                 MaxLength="9"
                        Style="{StaticResource TextBoxCustom}"  Validation.ErrorTemplate="{StaticResource errorTemplate}"
                        Padding="10"
                        >
                            <Binding
                        Path="Phone"
                        UpdateSourceTrigger="LostFocus"
                        ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <val:MinimumCharacterRule MinimumCharacters="9" />
                                    <val:MaximumCharacterRule MaximumCharacters="9" />
                                    <val:StartsWithRule7/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="5"
                        Grid.Column="2">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=tipAbonament, Path=SelectedValue}" Value="Portare Abonament Orange">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=tipAbonament, Path=SelectedValue}" Value="Portare Abonament Telekom">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=tipAbonament, Path=SelectedValue}" Value="Portare Abonament Digi">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Cod abonat" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox x:Name="cod_abonat"            
                        Style="{StaticResource TextBoxCustom}"  Validation.ErrorTemplate="{StaticResource errorTemplate}"
                        Padding="10"
                        >
                        </TextBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="5"
                        Grid.Column="2">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=tipAbonament, Path=SelectedValue}" Value="Portare PrePay Orange">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=tipAbonament, Path=SelectedValue}" Value="Portare PrePay Telekom">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=tipAbonament, Path=SelectedValue}" Value="Portare PrePay Digi">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=tipAbonament, Path=SelectedValue}" Value="Migrare">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Serie sim" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox x:Name="serie_sim"            
                        Style="{StaticResource TextBoxCustom}"  Validation.ErrorTemplate="{StaticResource errorTemplate}"
                        Padding="10"
                        >
                        </TextBox>
                    </StackPanel>

                    <StackPanel
                Grid.Row="1"
                Grid.Column="4">
                        <TextBlock Text="Abonament" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,10"/>
                        <ComboBox
                        x:Name="comboboxAbonament"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"      
                        SelectedValuePath="Content"
                        Cursor="Hand"
                        Height="50"
                        FontFamily="/Fonts/#Rubik Regular"
                        BorderThickness="0"
                        BorderBrush="{DynamicResource TextColor}"
                        Background="{DynamicResource InputColor}"
                        Foreground="{DynamicResource TextColor}"
                        Validation.ErrorTemplate="{StaticResource errorTemplate}"
                            SelectionChanged="ComboboxAbonament_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel
                Grid.Row="3"
                Grid.Column="4">
                        <TextBlock Text="Cost Servicii" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,10"/>
                        <ComboBox
                        x:Name="comboboxCostAbonament"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"      
                        SelectedValuePath="Content"
                        Cursor="Hand"
                        Height="50"
                        FontFamily="/Fonts/#Rubik Regular"
                        BorderThickness="0"
                        BorderBrush="{DynamicResource TextColor}"
                        Background="{DynamicResource InputColor}"
                        Foreground="{DynamicResource TextColor}"
                        Validation.ErrorTemplate="{StaticResource errorTemplate}"
                        />
                    </StackPanel>
                    <StackPanel
                Grid.Row="5"
                Grid.Column="4">
                        <TextBlock Text="Se doreste device?" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,10"/>
                        <ComboBox
                        x:Name="comboboxDeviceChoice"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"      
                        SelectedValuePath="Content"
                        IsEditable="True"
                        Cursor="Hand"
                        Height="50"
                        FontFamily="/Fonts/#Rubik Regular"
                        BorderThickness="0"
                        BorderBrush="{DynamicResource TextColor}"
                        Background="{DynamicResource InputColor}"
                        Foreground="{DynamicResource TextColor}"
                        Validation.ErrorTemplate="{StaticResource errorTemplate}"
                        >
                            <ComboBoxItem Content="Da" />
                            <ComboBoxItem Content="Nu" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Row="7"
                        Margin="0 0 0 10"
                        Grid.Column="4" VerticalAlignment="Center">
                        <Button Content="Mai departe" Style="{StaticResource SendButton}" Click="NextButtonClick"/>
                    </StackPanel>
                    <StackPanel Grid.Row="7"
                        Margin="0 0 0 10"
                        Grid.Column="2" VerticalAlignment="Center">
                        <Button Content="Inapoi" Style="{StaticResource SendButton}" Click="PreviousButtonClick"/>
                    </StackPanel>
                </Grid>
                <Grid x:Name="step3Panel" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Comanda device" Foreground="{DynamicResource TextColor}" Grid.Row="0" Grid.ColumnSpan="6" FontFamily="/Fonts/#Rubik Bold" VerticalAlignment="Center"/>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0">
                        <TextBlock Text="Cod Device" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <ComboBox
                        x:Name="comboboxDevice"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"      
                        SelectedValuePath="Content"
                        Cursor="Hand"
                        Height="50"
                        FontFamily="/Fonts/#Rubik Regular"
                        BorderThickness="0"
                        BorderBrush="{DynamicResource TextColor}"
                        Background="{DynamicResource InputColor}"
                        Foreground="{DynamicResource TextColor}"
                        Validation.ErrorTemplate="{StaticResource errorTemplate}"
                        />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="0">
                        <TextBlock Text="Cost rata" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox
                        x:Name="cost_rata"
                        Style="{StaticResource TextBoxCustom}"  Validation.ErrorTemplate="{StaticResource errorTemplate}">
                            <Binding
                        Path="CostRata"
                        UpdateSourceTrigger="LostFocus"
                        ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <val:NotEmptyRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="2">
                        <TextBlock Text="Cost total" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox
                        x:Name="cost_total"
                        Style="{StaticResource TextBoxCustom}"  Validation.ErrorTemplate="{StaticResource errorTemplate}">
                            <Binding
                        Path="CostTotal"
                        UpdateSourceTrigger="LostFocus"
                        ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <val:NotEmptyRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="2">
                        <TextBlock Text="Cod Discount" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox
                        x:Name="discount_code"
                        Style="{StaticResource TextBoxCustom}"  Validation.ErrorTemplate="{StaticResource errorTemplate}">
                            <Binding
                        Path="DiscountCode"
                        UpdateSourceTrigger="LostFocus"
                        ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <val:NotEmptyRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="4">
                        <TextBlock Text="Avans" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox
                        x:Name="avans"
                        Style="{StaticResource TextBoxCustom}"  Validation.ErrorTemplate="{StaticResource errorTemplate}">
                            <Binding
                        Path="Avans"
                        UpdateSourceTrigger="LostFocus"
                        ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <val:NotEmptyRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="4">
                        <TextBlock Text="Asigurare" Foreground="{DynamicResource TextColor}" FontFamily="/Fonts/#Rubik Regular" FontSize="12" Margin="0,0,0,5"/>
                        <ComboBox
                        x:Name="comboboxAsigurare"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Custom"      
                        SelectedValuePath="Content"
                        Cursor="Hand"
                        Height="50"
