                        <ComboBoxItem >Reconectare număr</ComboBoxItem>
                        <ComboBoxItem >Repostare FR</ComboBoxItem>
                        <ComboBoxItem >Eroare LPS</ComboBoxItem>
                        <ComboBoxItem >Ajustare CED</ComboBoxItem>
